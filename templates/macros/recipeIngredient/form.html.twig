{% macro printRecipeIngredientRow(recipeIngredient) %}
        <div class="row">
            <div class="col-sm-4">
                {{ form_row(recipeIngredient.ingredient) }}
            </div>
            <div class="col-sm-4">
                {{ form_row(recipeIngredient.quantity) }}
            </div>
            <div class="col-sm-4">
                {{ form_row(recipeIngredient.unitType) }}
            </div>
        </div>
        <button type="button" class="btn btn-primary mt-2" {{ stimulus_action('form-collection', 'removeCollectionElement') }}>remove a tag</button>
{% endmacro %}