<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('user_theme') }}
            <link rel="stylesheet" href="./assets/user/css/theme.min.css">
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('user_theme') }}
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body style="position: relative;min-height: 100vh;">
        {% block header %}
            {% include "partials/_header.html.twig" %}
        {% endblock %}

        {% block flash %}
            <div class="container mt-4">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-dismissible alert-{{ label }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        {% endblock %}
        <div id="body" class="container mt-4" style="padding-bottom: 10rem;">
            {% block body %}{% endblock %}
        </div>
        <div id="footer" style="position: absolute;bottom: 0;width: 100%;height: 2.5rem;">
            {% block footer %}
                {% include "partials/_footer.html.twig" %}
            {% endblock %}
        </div>

    </body>
</html>
