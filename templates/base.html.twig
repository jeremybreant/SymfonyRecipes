<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{% block stylesheets %}
			{{ encore_entry_link_tags('user_theme') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('user_theme') }}
			<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
		{% endblock %}
	</head>
	<body>
		{% block header %}
			{% include "partials/_header.html.twig" %}
		{% endblock %}

		<div id="body" class="container px-3 custom-mt-navbar">
			{% block flash %}
				<div class="container mt-4 px-3">
					{% for label, messages in app.flashes %}
						{% for message in messages %}
							<div class="alert alert-dismissible alert-{{ label }}">
								<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
								{{ message|raw }}
							</div>
						{% endfor %}
					{% endfor %}
				</div>
			{% endblock %}
			<div class="mt-4"> {% block body %}{% endblock %}
				</div>
			</div>
			<div id="footer" class="w-100 mt-5">
				{% block footer %}
					{% include "partials/_footer.html.twig" %}
				{% endblock %}
			</div>

		</body>
	</html>
