{% extends "base.html.twig" %}

{% block title %}StmfonyRecipes - Modification ingrédient{% endblock %}

{% block body %}
    <h1>
        Modification de l'ingrédient
    </h1>
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.name) }}
        {{ form_widget(form.name, {'attr': {'class': 'form-control' ~ (form_errors(form.name) is not empty ? ' is-invalid' : '')}}) }}
        <div class="invalid-feedback">
            {{ form_errors(form.name) }}
        </div>
    </div>
    <div class="form-group mt-4">
        {{ form_label(form.imageFile) }}
        {{ form_widget(form.imageFile, {'attr': {'class': 'form-control' ~ (form_errors(form.imageFile) is not empty ? ' is-invalid' : '')}}) }}
        <div class="invalid-feedback">
            {{ form_errors(form.imageFile) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_row(form.submit, {'label': 'Modifier'}) }}
    </div>
    {{ form_end(form) }}
{% endblock %}