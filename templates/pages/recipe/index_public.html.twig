{% extends 'base.html.twig' %}
{% import "macros/recipe/recipeCard.html.twig" as recipeCard %}

{% block title %}StmfonyRecipes - Les recettes{% endblock %}

{% block body %}
    <h1>Recettes de la communaut√©</h1>
    {% if recipes is same as([]) %}
        <h4>Il n'y a pas de recette</h4>
    {% else %}
        <div class="row justify-content-center">
            {% for recipe in recipes %}
                <a href="{{ path('recipe.show', { id: recipe.id}) }}" class="col col-md-3 col-sm-6 col-10 p-4 custom-neutral">
                    {{ recipeCard.displayRecipeCard(recipe.id, recipe.name, recipe.getMarks|length, recipe.getRoundedAverage(), vich_uploader_asset(recipe,'imageFile')) }}
                </a>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
