{% extends 'base.html.twig' %}

{% block title %}StmfonyRecipes - Mes recettes{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Mes recettes</h1>

        <a href="{{ path('recipe.new') }}" class="btn btn-primary mt-4">
            Créer une recette
        </a>

        <div class="count mt-4">
            {%  if recipes is empty %}
                Il y a 0 recette au total
            {% else %}
                Il y a {{ recipes.getTotalItemCount }} recettes au total
            {%  endif %}
        </div>

        <table class="table table-hover mt-4">
            <thead>
            <tr>
                <th scope="col">Numéro</th>
                <th scope="col">Nom</th>
                <th scope="col">Temps</th>
                <th scope="col">Nombre de personne</th>
                <th scope="col">Difficulté</th>
                <th scope="col">Prix</th>
                <th scope="col">Date de création</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for recipe in recipes %}
                <tr class="table-primary">
                    <th scope="row">{{ recipe.id }}</th>
                    <td>{{ recipe.name }}</td>
                    <td>{{ (recipe.time is null) ? '--' : recipe.time }}</td>
                    <td>{{ (recipe.peopleRequired is null) ? '--' : recipe.peopleRequired }}</td>
                    <td>{{ (recipe.difficulty is null) ? '--' : recipe.difficulty }}</td>
                    <td>{{ (recipe.price is null) ? '--' : recipe.price }}</td>
                    <td>{{ recipe.createdAt | date("d/m/Y") }}</td>
                    <td>
                        <a href="{{ path('recipe.edit', { id: recipe.id}) }}" class="btn btn-info">Modifier</a>
                        <a href="{{ path('recipe.delete', { id: recipe.id}) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {# display navigation #}
        <div class="navigation d-flex justify-content-center mt-4">
            {{ knp_pagination_render(recipes) }}
        </div>
    </div>
{% endblock %}
