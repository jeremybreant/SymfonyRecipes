{% extends 'base.html.twig' %}

{% block title %}StmfonyRecipes - Mes recettes{% endblock %}

{% block body %}
    <h1>Mes recettes</h1>

    <a href="{{ path('recipe.new') }}" class="btn btn-primary mt-4">
        Créer une recette
    </a>

    <div class="count mt-4">
        Il y a {{ recipes.getTotalItemCount }}
        {% if recipes.getTotalItemCount > 1 %}
            recettes
        {% else %}
            recette
        {% endif %}
        au total
    </div>

    <table class="table table-hover mt-4">
        <thead>
        <tr>
            <th scope="col">Numéro</th>
            <th scope="col">Nom</th>
            <th scope="col">Temps de préparation</th>
            <th scope="col">Temps de cuisson</th>
            <th scope="col">Quantité</th>
            <th scope="col">Difficulté</th>
            <th scope="col">Prix</th>
            <th scope="col">Date de création</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr class="table-primary">
                <th scope="row">{{ recipe.id }}</th>
                <td>{{ recipe.name }}</td>
                <td>{{ (recipe.preparationTime is null) ? '--' : recipe.preparationTime|min_to_hour }}</td>
                <td>{{ (recipe.cookingTime is null) ? '--' : recipe.cookingTime|min_to_hour }}</td>
                <td>{{ (recipe.foodQuantity is null) ? '--' : recipe.foodQuantity }} {{ (recipe.foodQuantityType is null) ? '--' : recipe.foodQuantityType }}</td>
                <td>{{ (recipe.difficulty is null) ? '--' : recipe.difficulty }}</td>
                <td>{{ (recipe.price is null) ? '--' : recipe.price }}</td>
                <td>{{ recipe.createdAt | date("d/m/Y") }}</td>
                <td>
                    {% if recipe.user == app.user %}
                        <a href="{{ path('recipe.show', { id: recipe.id}) }}" class="btn btn-success">Consulter</a>
                        <a href="{{ path('recipe.edit', { id: recipe.id}) }}" class="btn btn-info">Modifier</a>
                        <a href="{{ path('recipe.delete', { id: recipe.id}) }}" class="btn btn-danger"
                           onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');">Supprimer</a>
                    {% else %}
                        --
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {# display navigation #}
    <div class="navigation d-flex justify-content-center mt-4">
        {{ knp_pagination_render(recipes) }}
    </div>
{% endblock %}
